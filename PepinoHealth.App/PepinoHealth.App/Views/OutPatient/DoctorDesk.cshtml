@{
    ViewBag.Title = "DoctorDesk";
}

<script type="text/javascript">
    $(document).ready(function () {
        hideModal('loader');
    });
</script>

<div class="p-block v2">
    <div class="p-header">
        <div class="title">
            Doctor Desk
        </div>
    </div>
    <div class="p-body">
        <div class="p-body-content">
            <form id="formPage2">
                <section>
                    <div class="header">
                        <div class="title">
                            Appointment Details:
                        </div>
                    </div>
                    <div class="body">
                        <div class="row">
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>IP No</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control"
                                               id="txtIPNo" name="txtIPNo"
                                               disabled>
                                        <button class="btn btn-info btn-sm btn-search-icon" type="button">
                                            <i class="material-icons">content_copy</i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Date Time</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="txtDateTime" name="txtDateTime" />
                                        <button class="btn btn-info btn-sm btn-search-icon" type="button">
                                            <i class="material-icons">date_range</i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Prepared By</label>
                                    <div class="form-label">Admin</div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Modified By</label>
                                    <div class="form-label">--</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <hr />

                <section>
                    <div class="header">
                        <div class="title">
                            Patient Details:
                        </div>
                    </div>
                    <div class="body">
                        <div class="row">
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>UHID</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control"
                                               id="txtUHID" name="txtUHID"
                                               disabled>
                                        <button class="btn btn-info btn-sm btn-search-icon" type="button">
                                            <i class="material-icons">search</i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Name <span class="required">*</span></label>

                                    <div class="input-group">
                                        <select class="form-control form-title" id="ddlTitle" name="ddlTitle">
                                            <option>Mr.</option>
                                        </select>
                                        <input type="text" class="form-control" id="txtName" name="txtName" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label>Gender <span class="required">*</span></label>
                                            <select class="form-control" id="ddlGender" name="ddlGender">
                                                <option>Male</option>
                                                <option>Female</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <label>Age <span class="required">*</span></label>
                                            <input type="text" class="form-control" id="txtAge" name="txtAge" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Date of Birth</label>
                                    <input type="text" class="form-control" id="txtDateOfBirth" name="txtDateOfBirth" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Father Name</label>
                                    <input type="text" class="form-control" id="txtFatherName" name="txtFatherName" />
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Husband Name</label>
                                    <input type="text" class="form-control" id="txtHusbandName" name="txtHusbandName" />
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Marital Status <span class="required">*</span></label>
                                    <select class="form-control" id="txtMaritalStatus" name="txtMaritalStatus">
                                        <option>Single</option>
                                        <option>Married</option>
                                        <option>Single Parent</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Address</label>
                                    <textarea class="form-control" id="taAddress" name="taAddress" rows="1"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Phone</label>
                                    <input type="text" class="form-control" id="txtPhone" name="txtPhone" />
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Referral Type <span class="required">*</span></label>
                                    <select class="form-control" id="ddlReferralType" name="ddlReferralType">
                                        <option>Self</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Referral Name <span class="required">*</span></label>
                                    <select class="form-control" id="ddlReferralName" name="ddlReferralName">
                                        <option>Self</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Doctor Name</label>
                                    <select type="text" class="form-control" id="ddlDoctorName" name="ddlDoctorName">
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Category</label>
                                    <select type="text" class="form-control" id="ddlCategory" name="ddlCategory">
                                        <option>Regular</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Department Name <span class="required">*</span></label>
                                    <select class="form-control" id="ddlDepartmentName" name="ddlDepartmentName">
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Ward / Bed <span class="required">*</span></label>

                                    <div class="row">
                                        <div class="col">
                                            <select class="form-control" id="ddlWard" name="ddlWard">
                                            </select>
                                        </div>
                                        <div class="col">
                                            <select class="form-control" id="ddlBed" name="ddlBed">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Transfer Department</label>
                                    <select class="form-control" id="ddlTransferDepartment" name="ddlTransferDepartment">
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Transfer Ward / Bed</label>

                                    <div class="row">
                                        <div class="col">
                                            <select class="form-control" id="ddlTransferWard" name="ddlTransferWard">
                                            </select>
                                        </div>
                                        <div class="col">
                                            <select class="form-control" id="ddlTransferBed" name="ddlTransferBed">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Transfer Date Time</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="txtTransferDateTime" name="txtTransferDateTime" />
                                        <button class="btn btn-info btn-sm btn-search-icon" type="button">
                                            <i class="material-icons">date_range</i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col">
                                            <label>Charge</label>
                                            <input type="text" class="form-control" id="txtAmont" name="txtAmont" />
                                        </div>
                                        <div class="col">
                                            <label>Pay Mode</label>
                                            <select type="text" class="form-control" id="ddlPaymentMode" name="ddlPaymentMode">
                                                <option>Cash</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="button-block">
                                <button type="button" class="btn btn-success btn-sm">
                                    Save
                                </button>
                                <button type="button" class="btn btn-primary btn-sm">
                                    Print
                                </button>
                                <button type="button" class="btn btn-warning btn-sm">
                                    Modify
                                </button>
                                <button type="button" class="btn btn-secondary btn-sm">
                                    Transfer
                                </button>
                                <button type="button" class="btn btn-danger btn-sm">
                                    Delete
                                </button>
                                <button type="button" class="btn btn-secondary btn-sm">
                                    Refresh [New]
                                </button>
                                <button type="button" class="btn btn-warning btn-sm">
                                    Transfer Print
                                </button>
                            </div>
                        </div>
                    </div>
                </section>
            </form>
        </div>
    </div>
</div>

