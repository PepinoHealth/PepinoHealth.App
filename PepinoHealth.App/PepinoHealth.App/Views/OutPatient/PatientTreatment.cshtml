
@using PepinoHealth.App.Helpers

@{
    ViewBag.Title = "Patient Treatment";
}

@Html.WriteScriptInclude(Source.view_outpatient_outpatient)

<script type="text/javascript">
    $(document).ready(function () {
        bindControlsOnLoadInPatientTreatment();
    })
</script>

<script type="text/javascript">
    getPatientDetailsUrl            = '@Url.Action(MVC.OutPatient.GetPatientDetails())';
    managePatientDetailsUrl         = '@Url.Action(MVC.OutPatient.ManagePatientDetails())';
    downloadFileUrl                 = '@Url.Action(MVC.OutPatient.DownloadFile())';
    deletePatientFileUrl            = '@Url.Action(MVC.OutPatient.DeletePatientFile())';
</script>

<div class="p-block v2">
    <div class="p-header">
        <div class="title">
            Patient Treatment
        </div>
    </div>
    <div class="p-body">
        <div class="p-body-content">
            <form id="formPatientTreatment" class="v2">
                <section>
                    <div class="header">
                        <div class="title">
                            Patient Details
                        </div>
                    </div>
                    <div class="body">
                        <div class="row">
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>UHID</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control"
                                               id="txtUHID" name="txtUHID"
                                               disabled>
                                        <button class="btn btn-info btn-sm btn-search-icon" type="button">
                                            <i class="material-icons">search</i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3 ml-auto">
                                <div class="form-group">
                                    <label>Date Time</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="txtDateTime" name="txtDateTime" />
                                        <button class="btn btn-info btn-sm btn-search-icon" type="button">
                                            <i class="material-icons">date_range</i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Name <span class="required">*</span></label>
                                    <input type="text" class="form-control" id="txtName" name="txtName" />
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6">
                                <div class="row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label>Gender <span class="required">*</span></label>
                                            <select class="form-control" id="ddlGender" name="ddlGender">
                                                <option>Male</option>
                                                <option>Female</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <label>Age <span class="required">*</span></label>
                                            <input type="text" class="form-control" id="txtAge" name="txtAge" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Date Of Birth</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="txtDateOfBirth" name="txtDateOfBirth" />
                                        <button class="btn btn-info btn-sm btn-search-icon" type="button">
                                            <i class="material-icons">date_range</i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label>Treatment Given</label>
                                    <textarea class="form-control ta-2" id="txtTreatmentGiven" name="txtTreatmentGiven" rows="1"></textarea>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label>Advice Given</label>
                                    <textarea class="form-control ta-2" id="txtAdviceGiven" name="txtAdviceGiven" rows="1"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Select file(s) to upload</label>
                                    <div class="input-group form-upload">
                                        <input type="text" class="form-control" />
                                        <input type="file" class="hide" multiple id="fDocuments" name="fDocuments"
                                               accept=".xlsx,.xls,image/*,.doc, .docx,.ppt, .pptx,.txt,.pdf" />
                                        <button class="btn btn-info btn-sm btn-search-icon" type="button">
                                            <i class="material-icons">file_upload</i>
                                        </button>
                                    </div>
                                    <div>
                                        <ol class="p-files"></ol>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="button-block">
                                <button type="submit" class="btn btn-success btn-sm">
                                    Save
                                </button>
                                <button type="button" class="btn btn-secondary btn-sm">
                                    Refresh [New]
                                </button>
                                <button type="button" class="btn btn-danger btn-sm">
                                    Delete
                                </button>
                                <button type="button" class="btn btn-warning btn-sm">
                                    Report
                                </button>
                            </div>
                        </div>
                    </div>
                </section>
            </form>
        </div>
    </div>
</div>