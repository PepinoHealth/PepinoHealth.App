                                            <li class="sub-menu-item"><a class="sub-menu-link" href="#"><i class="material-icons">settings</i><span>Package Settings</span></a></li>


                                            <li class="sub-menu-item cascade">
                                                <div class="sub-child-nav-block">
                                                    <div class="sub-child-nav-menu-item">
                                                        <i class="material-icons">home</i>
                                                        <sapn>Admin</sapn>
                                                        <i class="material-icons">keyboard_arrow_down</i>
                                                    </div>

                                                    <ul class="sub-child-menu">
                                                        <li class="sub-child-menu-item"><a class="sub-child-menu-link" href="#"><i class="material-icons">perm_data_setting</i><span>Lorem Ipsum Carlo Siano 1</span></a></li>
                                                        <li class="sub-child-menu-item b-rounded"><a class="sub-child-menu-link" href="#"><i class="material-icons">perm_data_setting</i><span>Lorem Ipsum Carlo Siano 2</span></a></li>
                                                    </ul>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </li>
                                <li class="menu-item sub-nav">
                                    <div class="sub-nav-block">
                                        <div class="sub-nav-menu-item">
                                            <i class="material-icons">assignment</i>
                                            <sapn>OP Module</sapn>
                                            <i class="material-icons">keyboard_arrow_down</i>
                                        </div>

                                        <ul class="sub-menu">
                                            <li class="sub-menu-item"><a class="sub-menu-link" href="@Url.Action(MVC.OutPatient.OPRegistration())"><i class="material-icons">assignment</i><span>OP Registration</span></a></li>
                                            <li class="sub-menu-item"><a class="sub-menu-link" href="@Url.Action(MVC.OutPatient.OPRevisitRegistration())"><i class="material-icons">autorenew</i><span>OP Revisit</span></a></li>
