                                            <li class="sub-menu-item"><a class="sub-menu-link" href="#"><i class="material-icons">autorenew</i><span>Next Visit</span></a></li>
                                            <li class="sub-menu-item"><a class="sub-menu-link" href="#"><i class="material-icons">autorenew</i><span>Next Visit Report</span></a></li>
                                            <li class="sub-menu-item"><a class="sub-menu-link" href="#"><i class="material-icons">insert_chart</i><span>OP Medical Records</span></a></li>
                                            <li class="sub-menu-item"><a class="sub-menu-link" href="#"><i class="material-icons">person</i><span>Doctor Desk</span></a></li>

                                        </ul>
                                    </div>
                                </li>
                                <li class="menu-item sub-nav">
                                    <div class="sub-nav-block">
                                        <div class="sub-nav-menu-item">
                                            <i class="material-icons">assignment</i>
                                            <sapn>IP Module</sapn>
                                            <i class="material-icons">keyboard_arrow_down</i>
                                        </div>

                                        <ul class="sub-menu">
                                            <li class="sub-menu-item"><a class="sub-menu-link" href="@Url.Action(MVC.IPModule.ObstetricDischargeSummary())"><i class="material-icons">assignment</i><span>IP Registration</span></a></li>
                                            <li class="sub-menu-item"><a class="sub-menu-link" href="#"><i class="material-icons">insert_chart</i><span>IP Reports</span></a></li>
                                            <li class="sub-menu-item"><a class="sub-menu-link" href="@Url.Action(MVC.IPModule.DischargeSummary())"><i class="material-icons">assignment</i><span>Discharge Summary</span></a></li>
                                        </ul>
                                    </div>
                                </li>
                                <li class="menu-item sub-nav">
                                    <div class="sub-nav-block">
                                        <div class="sub-nav-menu-item">
                                            <i class="material-icons">home</i>
                                            <sapn>Billing Module</sapn>
                                            <i class="material-icons">keyboard_arrow_down</i>
                                        </div>

                                        <ul class="sub-menu">
                                            <li class="sub-menu-item"><a class="sub-menu-link" href="@Url.Action(MVC.OPBilling.DebitDetails())"><i class="material-icons">perm_data_setting</i><span>Tariff Master</span></a></li>
                                            <li class="sub-menu-item"><a class="sub-menu-link" href="@Url.Action(MVC.OPBilling.OPBilling())"><i class="material-icons">receipt</i><span>OP Billing</span></a></li>
                                            <li class="sub-menu-item"><a class="sub-menu-link" href="@Url.Action(MVC.OPBilling.IPDayWiseBilling())"><i class="material-icons">receipt</i><span>IP Billing</span></a></li>
                                            <li class="sub-menu-item"><a class="sub-menu-link" href="@Url.Action(MVC.OPBilling.DischargeBilling())"><i class="material-icons">perm_data_setting</i><span>Balance Amount Update</span></a></li>
