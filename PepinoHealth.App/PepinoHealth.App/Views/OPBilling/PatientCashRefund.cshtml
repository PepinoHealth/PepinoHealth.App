
@{
    ViewBag.Title = "Patient Cash Refund";
}

<script type="text/javascript">
    $(document).ready(function () {
        hideModal('loader');
    })
</script>

<div class="p-block v2">
    <div class="p-header">
        <div class="title">
            Patient Cash Refund
        </div>
    </div>
    <div class="p-body">
        <div class="p-body-content">
            <div class="p-card mb-0">
                <div class="p-card-header">
                    <ul class="nav nav-tabs list tab-menu">
                        <li><a id="refund-tab" href="#refund" data-toggle="tab" aria-controls="refund" aria-selected="true" class="active">Refund</a></li>
                        <li><a id="advance-refund-tab" href="#advance-refund" data-toggle="tab" aria-controls="advance-refund" aria-selected="false">Advance Refund</a></li>
                    </ul>
                </div>
                <div class="p-card-body">
                    <div class="tab-content">
                        <div class="tab-pane show active" role="tabpanel" id="refund" aria-labelledby="refund-tab">
                            <div>
                                <form id="formRefund">
                                    <section>
                                        <div class="header">
                                            <div class="title">
                                                Bill Details:
                                            </div>
                                        </div>
                                        <div class="body">
                                            <div class="row">
                                                <div class="col-sm-6 col-md-3">
                                                    <div class="form-group">
                                                        <label>Receipt Number</label>
                                                        <div class="input-group">
                                                            <input type="text" class="form-control"
                                                                   id="txtReceiptNumber" name="txtReceiptNumber"
                                                                   disabled>
                                                            <button class="btn btn-info btn-sm btn-search-icon" type="button">
                                                                <i class="material-icons">search</i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-3">
                                                    <div class="form-group">
                                                        <label>Year</label>
                                                        <div class="input-group">
                                                            <input type="text" class="form-control" id="txtYear" name="txtYear" />
                                                            <button class="btn btn-info btn-sm btn-search-icon" type="button">
                                                                <i class="material-icons">date_range</i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-3">
                                                    <div class="form-group">
                                                        <label>Prepared By</label>
                                                        <div class="form-label">Admin</div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-3">
                                                    <div class="form-group">
                                                        <label>Modified By</label>
                                                        <div class="form-label">--</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </section>

                                    <hr />

                                    <section>
                                        <div class="header">
                                            <div class="title">
                                                Patient Details:
                                            </div>
                                        </div>
                                        <div class="body">
                                            <div class="row">
                                                <div class="col-sm-6 col-md-3">
                                                    <div class="form-group">
                                                        <label>Bill Number</label>
                                                        <input type="text" class="form-control" id="txtBillNumber" name="txtBillNumber" />
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-3">
                                                    <div class="form-group">
                                                        <label>UHID</label>
                                                        <input type="text" class="form-control" id="txtUHID" name="txtUHID" />
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-3">
                                                    <div class="form-group">
                                                        <label>IP Number </label>
                                                        <input type="text" class="form-control" id="txtIPNumber" name="txtIPNumber" />
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-3">
                                                    <div class="form-group">
                                                        <label>Patient Name</label>
                                                        <input type="text" class="form-control" id="txtPatientName" name="txtPatientName" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-6 col-md-3">
                                                    <div class="row">
                                                        <div class="col">
                                                            <div class="form-group">
                                                                <label>Gender <span class="required">*</span></label>
                                                                <select class="form-control" id="ddlGender" name="ddlGender">
                                                                    <option>Male</option>
                                                                    <option>Female</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="form-group">
                                                                <label>Age <span class="required">*</span></label>
                                                                <input type="text" class="form-control" id="txtAge" name="txtAge" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-3">
                                                    <div class="form-group">
                                                        <label>Department Name</label>
                                                        <select class="form-control" id="ddlDepartmentName" name="ddlDepartmentName">
                                                            <option>Gynaecology</option>
                                                            <option>Rheumatology</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </section>

                                    <hr />

                                    <section>
                                        <div class="header">
                                            <div class="title">
                                                Payment Details:
                                            </div>
                                        </div>
                                        <div class="body">
                                            <div class="row">
                                                <div class="col-sm-6 col-md-3">
                                                    <div class="form-group">
                                                        <label>Pay Mode</label>
                                                        <select type="text" class="form-control" id="ddlPaymentMode" name="ddlPaymentMode">
                                                            <option>Cash</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-3">
                                                    <div class="form-group">
                                                        <label>Cheque/DD Number</label>
                                                        <input type="text" class="form-control" id="txtNumber" name="txtNumber" />
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-3">
                                                    <div class="form-group">
                                                        <label>Date Time</label>
                                                        <div class="input-group">
                                                            <input type="text" class="form-control" id="txtDateTime" name="txtDateTime" />
                                                            <button class="btn btn-info btn-sm btn-search-icon" type="button">
                                                                <i class="material-icons">date_range</i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-3">
                                                    <div class="form-group">
                                                        <label>Charge</label>
                                                        <div class="row">
                                                            <div class="col">
                                                                <div class="input-group">
                                                                    <span>Rs</span>
                                                                    <input type="text" class="form-control" />
                                                                </div>
                                                            </div>
                                                            <div class="col">
                                                                <div class="input-group">
                                                                    <input type="text" class="form-control" />
                                                                    <span>%</span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-6 col-md-6">
                                                    <div class="form-group">
                                                        <label>Reason</label>
                                                        <textarea class="form-control ta-2" id="taReason" name="taReason" rows="1"></textarea>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-6">
                                                    <div class="form-group mb-1">
                                                        <label></label>
                                                        <textarea class="form-control ta-2" rows="1"></textarea>
                                                    </div>
                                                    <small class="form-text text-muted">
                                                        <label class="custom-control custom-checkbox">
                                                            <input type="checkbox" class="custom-control-input" id="chkOT" name="chkOT">
                                                            <span class="custom-control-indicator"></span>
                                                            <span class="custom-control-description">OT</span>
                                                        </label>
                                                    </small>
                                                </div>
                                            </div>
                                            <div class="row justify-content-end">
                                                <div class="col-sm-6 col-md-3">
                                                    <div class="form-group">
                                                        <div class="input-group">
                                                            <div class="input-group-addon mr-1">
                                                                <span>Previous Refund:</span>
                                                            </div>
                                                            <span>Rs</span>
                                                            <input type="text" class="form-control form-currency" id="txtPreviousRefund" name="txtPreviousRefund" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-3">
                                                    <div class="form-group">
                                                        <div class="input-group">
                                                            <div class="input-group-addon mr-1">
                                                                <span>Total Amount:</span>
                                                            </div>
                                                            <span>Rs</span>
                                                            <input type="text" class="form-control form-currency" id="txtTotalAmount" name="txtTotalAmount" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col">
                                                <div class="button-block">
                                                    <button type="button" class="btn btn-success btn-sm">
                                                        Save
                                                    </button>
                                                    <button type="button" class="btn btn-primary btn-sm">
                                                        Print
                                                    </button>
                                                    <button type="button" class="btn btn-warning btn-sm">
                                                        Modify
                                                    </button>
                                                    <button type="button" class="btn btn-danger btn-sm">
                                                        Delete
                                                    </button>
                                                    <button type="button" class="btn btn-secondary btn-sm">
                                                        Refresh [New]
                                                    </button>
                                                    <button type="button" class="btn btn-danger btn-sm">
                                                        Delete
                                                    </button>
                                                    <button type="button" class="btn btn-primary btn-sm">
                                                        Print All
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </section>
                                </form>
                            </div>
                        </div>
                        <div class="tab-pane" role="tabpanel" id="advance-refund" aria-labelledby="advance-refund-tab">
                            <div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>