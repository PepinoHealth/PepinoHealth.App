@using PepinoHealth.App.Helpers
@using PepinoHealth.CL.Common
@{
    ViewBag.Title = "OutPatientRegistration";
}
@Html.WriteScriptInclude(Source.export)
@Html.WriteScriptInclude(Source.view_opipviews_opipreports)

<script type="text/javascript">
    $(document).ready(function () {
        bindControlsOnLoadInOutPatientReports();
        bindGetIPDDepartmentDetails();
       
    });
</script>
<script type="text/javascript">
    deptUrl                 = '@Url.Action(MVC.OPIPReports.GetOutPatientDepartmentDetails())';
    newVisitUrl             = '@Url.Action(MVC.OPIPReports.GetNewVisitPatientDetails())';
    reVisitUrl              = '@Url.Action(MVC.OPIPReports.GetReVisitPatientDetails())';
    bothVisitUrl            = '@Url.Action(MVC.OPIPReports.GetBothVisitPatientDetails())';
</script>
<div class="p-block v2">
    <div class="p-header">
        <div class="title">
            IPD Patient Registration Reports
        </div>
    </div>
    <div class="p-body">
        <div class="p-body-content">
            <form id="formOutPatient" class="v2">
                <section>
                    <div class="body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label class="custom-control custom-checkbox">
                                            <input type="checkbox" name="visit" class="custom-control-input" id="chkNewVisit" value="NEWVISIT">
                                            <span class="custom-control-indicator"></span>
                                            <span class="custom-control-description">NEW VISIT</span>
                                        </label>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="custom-control custom-checkbox">
                                            <input type="checkbox" name="visit" class="custom-control-input" id="chkReVisit" value="REVISIT">
                                            <span class="custom-control-indicator"></span>
                                            <span class="custom-control-description">REVISIT</span>
                                        </label>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="custom-control custom-checkbox">
                                            <input type="checkbox" name="visit" class="custom-control-input" id="chkBothVisit" value="BOTHVISIT">
                                            <span class="custom-control-indicator"></span>
                                            <span class="custom-control-description">BOTH VISIT</span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>DEPARTMENT:</label>
                                            <div class="input-group">
                                                <select id="ddlIPDDepartment" name="ddlIPDDepartment" class="custom-select my-1 mr-sm-2 labelsm">
                                                    <option value="ALL" selected>ALL</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>Start Date:</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" id="txtStartDateTime" name="txtStartDateTime" />
                                                <button class="btn btn-info btn-sm btn-search-icon" type="button">
                                                    <i class="material-icons">date_range</i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>END Date:</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" id="txtEndDateTime" name="txtEndDateTime" />
                                                <button class="btn btn-info btn-sm btn-search-icon" type="button">
                                                    <i class="material-icons">date_range</i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <label></label>
                                        <div class="button-block">
                                            <button type="button" class="btn btn-success btn-sm" data-action-id="@((int)ActionType.Save)">
                                                Search..
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-xs-12 col-md-12 col-sm-12 col-lg-12" id="tblnewvisit">

                                        <div class="p-body">

                                            <h5 class="text-center font-weight-bold title" style="color:#fff;">NEW VISIT PATIENT DETAILS</h5>

                                            <div class="p-body-content">
                                                <table class="table table-striped table-hover table-rounded dataTable" id="tbl-newvisit">
                                                    <thead>
                                                        <tr>
                                                            <th>Number</th>
                                                            <th>Date</th>
                                                            <th>Year</th>
                                                            <th>SurName</th>
                                                            <th>Name</th>
                                                            <th>FatherName</th>
                                                            <th>Husband</th>
                                                            <th>Address</th>
                                                            <th>Gender</th>
                                                            <th>Age</th>
                                                            <th>Department</th>
                                                            <th>Doctor</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody></tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-xs-12 col-md-12 col-sm-12 col-lg-12" id="tblrevisit">

                                        <div class="p-body">

                                            <h5 class="text-center font-weight-bold title" style="color:#fff;">RE VISIT PATIENT DETAILS</h5>

                                            <div class="p-body-content">
                                                <table class="table table-striped table-hover table-rounded dataTable" id="tbl-revisit">
                                                    <thead>
                                                        <tr>
                                                            <th>Number</th>
                                                            <th>Date</th>
                                                            <th>Year</th>
                                                            <th>SurName</th>
                                                            <th>Name</th>
                                                            <th>Age</th>
                                                            <th>Department</th>
                                                            <th>Doctor</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody></tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-xs-12 col-md-12 col-sm-12 col-lg-12" id="tblbothvisit">

                                        <div class="p-body">

                                            <h5 class="text-center font-weight-bold title" style="color:#fff;">BOTH VISIT PATIENT DETAILS</h5>

                                            <div class="p-body-content">
                                                <table class="table table-striped table-hover table-rounded dataTable" id="tbl-bothvisit">
                                                    <thead>
                                                        <tr>
                                                            <th>FCh</th>
                                                            <th>Opr_No</th>
                                                            <th>Opr_Date</th>
                                                            <th>Opr_Name</th>
                                                            <th>Opr_Age</th>
                                                            <th>Opr_Gender</th>
                                                            <th>Opr_Dept_Name</th>
                                                            <th>Opr_Category</th>
                                                            <th>Opr_Unit</th>
                                                            <th>MCh</th>
                                                            <th>O_FCh</th>
                                                            <th>From_Date</th>
                                                            <th>To_Date</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody></tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </form>
        </div>
    </div>
</div>

