
@using PepinoHealth.App.Helpers

@{
    ViewBag.Title = "Login";
}

@Html.WriteScriptInclude(Source.view_user_register)

<script type="text/javascript">
    $(document).ready(function () {
        bindControlsOnLoadInLogin();
    });
</script>

<script type="text/javascript">
    validateUserUrl         = '@Url.Action(MVC.Home.ValidateUser())';
    grantAccessUrl          = '@Url.Action(MVC.Home.GrantAccess())';
    quickLinksUrl           = '@Url.Action(MVC.Home.QuickLinksV2())';
</script>

<div class="row justify-content-center">
    <div class="col-sm-8 col-md-6">
        <div id="login-section">
            <div class="p-block v2">
                <div class="p-header">
                    <div class="title">
                        &nbsp;
                    </div>
                </div>
                <div class="p-body">
                    <div class="p-body-content">
                        <form id="formLogin" class="v2">
                            <section>
                                <div class="header">
                                    <h2 class="title">
                                        User Login
                                    </h2>
                                </div>
                                <div class="body">
                                    <div class="form-group">
                                        <label>Username</label>
                                        <input type="text" class="form-control"
                                               id="txtUsername" name="txtUsername"
                                               placeholder="Username"
                                               autocomplete="off" />
                                    </div>

                                    <div class="form-group">
                                        <label>Password</label>
                                        <input type="password" class="form-control"
                                               id="txtPassword" name="txtPassword"
                                               placeholder="Password" />
                                    </div>

                                    <div class="form-group form-center">
                                        <button type="submit" class="btn btn-info">Login</button>
                                    </div>

                                    <div class="form-group">
                                        <ul>
                                            <li>
                                                <a href="#">Forgot Password?</a>
                                            </li>
                                            <li>
                                                Do not have an account? <a href="#">Signup</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </section>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


