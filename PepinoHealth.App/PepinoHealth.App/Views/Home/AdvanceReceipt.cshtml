
@{
    ViewBag.Title = "Advance Receipt";
}

<script type="text/javascript">
    $(document).ready(function () {
        hideModal('loader');        

        $('#tbl-ad').DataTable({
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
            responsive: true,
            "order": [[0, "asc"]]
        });

        /*showModal('mdl-id-details');*/
    })
</script>

<div class="p-block v2">
    <div class="p-header">
        <div class="title">
            Advance Receipt
        </div>
    </div>
    <div class="p-body">
        <div class="p-body-content">
            <form id="formAdvanceReceipt">
                <section>
                    <div class="header">
                        <div class="title">
                            Receipt Details:
                        </div>
                    </div>
                    <div class="body">
                        <div class="row">
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Advance Bill Number</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control"
                                               id="txtBillNumber" name="txtBillNumber"
                                               disabled>
                                        <button class="btn btn-info btn-sm btn-search-icon" type="button">
                                            <i class="material-icons">search</i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Date Time</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="txtDateTime" name="txtDateTime" />
                                        <button class="btn btn-info btn-sm btn-search-icon" type="button">
                                            <i class="material-icons">date_range</i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Prepared By</label>
                                    <div class="form-label">Admin</div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Modified By</label>
                                    <div class="form-label">--</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <hr />

                <section>
                    <div class="header">
                        <div class="title">
                            Patient Details:
                        </div>
                    </div>
                    <div class="body">
                        <div class="row">
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>IP Number <span class="required">*</span></label>
                                    <select class="form-control"
                                            id="ddlIP" name="ddlIP">
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>UHID Number</label>
                                    <input type="text" class="form-control" id="txtUHID" name="txtUHID" />
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Patient Name</label>
                                    <input type="text" class="form-control" id="txtPatientName" name="txtPatientName" />
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label>Gender <span class="required">*</span></label>
                                            <select class="form-control" id="ddlGender" name="ddlGender">
                                                <option>Male</option>
                                                <option>Female</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <label>Age <span class="required">*</span></label>
                                            <input type="text" class="form-control" id="txtAge" name="txtAge" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Doctor Name</label>
                                    <select type="text" class="form-control" id="ddlDoctorName" name="ddlDoctorName">
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col">
                                            <label>Charge</label>
                                            <input type="text" class="form-control" id="txtAmont" name="txtAmont" />
                                        </div>
                                        <div class="col">
                                            <label>Pay Mode</label>
                                            <select type="text" class="form-control" id="ddlPaymentMode" name="ddlPaymentMode">
                                                <option>Cash</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Available Advance</label>
                                    <input type="text" class="form-control" id="txtAvailableAdvance" name="txtAvailableAdvance" />
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Advance Amount <span class="required">*</span></label>
                                    <input type="text" class="form-control" id="txtAdvanceAmount" name="txtAdvanceAmount" />
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Cash</label>
                                    <input type="text" class="form-control" id="txtCash" name="txtCash" />
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Card</label>
                                    <input type="text" class="form-control" id="txtCard" name="txtCard" />
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Wallet Pay</label>
                                    <input type="text" class="form-control" id="txtWalletPay" name="txtWalletPay" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="button-block">
                                <button type="button" class="btn btn-success btn-sm">
                                    Save
                                </button>
                                <button type="button" class="btn btn-warning btn-sm">
                                    Modify
                                </button>
                                <button type="button" class="btn btn-primary btn-sm">
                                    Print
                                </button>
                                <button type="button" class="btn btn-secondary btn-sm">
                                    Refresh [New]
                                </button>
                                <button type="button" class="btn btn-danger btn-sm">
                                    Close
                                </button>
                            </div>
                        </div>
                    </div>
                </section>
            </form>
        </div>
    </div>
</div>

