
@{
    ViewBag.Title = "OP Revisit Registration";
}

<script type="text/javascript">
    $(document).ready(function () {
        selectMenu('menu-revisit-registration');
        hideModal('loader');
    })
</script>

<div class="p-block v2">
    <div class="p-header">
        <div class="title">
            OP Revisit Registration
        </div>
    </div>
    <div class="p-body">
        <div class="p-body-content">
            <form id="formRevisitRegistration">
                <section>
                    <div class="header">
                        <div class="title">
                            Appointment Details:
                        </div>
                    </div>
                    <div class="body">
                        <div class="row">
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>UHID</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control"
                                               id="txtUHID" name="txtUHID"
                                               disabled>
                                        <button class="btn btn-info btn-sm btn-search-icon" type="button">
                                            <i class="material-icons">search</i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Date Time</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="txtDateTime" name="txtDateTime" />
                                        <button class="btn btn-info btn-sm btn-search-icon" type="button">
                                            <i class="material-icons">date_range</i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Prepared By</label>
                                    <div class="form-label">Admin</div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Modified By</label>
                                    <div class="form-label">--</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <hr />

                <section>
                    <div class="header">
                        <div class="title">
                            Patient Details:
                        </div>
                    </div>
                    <div class="body">
                        <div class="row">
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Name <span class="required">*</span></label>

                                    <div class="input-group">
                                        <select class="form-control form-title" id="ddlTitle" name="ddlTitle">
                                            <option>Mr.</option>
                                        </select>
                                        <input type="text" class="form-control" id="txtName" name="txtName" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label>Gender <span class="required">*</span></label>
                                            <select class="form-control" id="ddlGender" name="ddlGender">
                                                <option>Male</option>
                                                <option>Female</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <label>Age <span class="required">*</span></label>
                                            <input type="text" class="form-control" id="txtAge" name="txtAge" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Phone</label>
                                    <input type="text" class="form-control" id="txtPhone" name="txtPhone" />
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Address</label>
                                    <textarea type="text" class="form-control" id="txtAddress" name="txtAddress" rows="1"></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Category</label>
                                    <select type="text" class="form-control" id="ddlCategory" name="ddlCategory">
                                        <option>Regular</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Department Name <span class="required">*</span></label>
                                    <select class="form-control" id="ddlDepartmentName" name="ddlDepartmentName">
                                        <option>Gynaecology</option>
                                        <option>Rheumatology</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label>Consultant Doctor</label>
                                    <select type="text" class="form-control" id="ddlConsultantDoctor" name="ddlConsultantDoctor">
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col">
                                            <label>Charge</label>
                                            <input type="text" class="form-control" id="txtAmont" name="txtAmont" />
                                        </div>
                                        <div class="col">
                                            <label>Pay Mode</label>
                                            <select type="text" class="form-control" id="ddlPaymentMode" name="ddlPaymentMode">
                                                <option>Cash</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Complaint</label>
                                    <textarea class="form-control ta-2" id="taComplaint" name="taComplaint" rows="1"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>                    

                    <div class="row">
                        <div class="col">
                            <div class="button-block">
                                <button type="button" class="btn btn-success btn-sm">
                                    Save
                                </button>
                                <button type="button" class="btn btn-warning btn-sm">
                                    Modify
                                </button>
                                <button type="button" class="btn btn-danger btn-sm">
                                    Delete
                                </button>
                                <button type="button" class="btn btn-primary btn-sm">
                                    Print
                                </button>
                                <button type="button" class="btn btn-secondary btn-sm">
                                    Refresh [New]
                                </button>
                                <button type="button" class="btn btn-info btn-sm">
                                    Close
                                </button>
                            </div>
                        </div>
                    </div>
                </section>
            </form>
        </div>
    </div>
</div>



